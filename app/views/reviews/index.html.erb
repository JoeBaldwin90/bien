<!-- Add review button -->
<nav class="add-review">
  <li class="diamond-lg center"><%= link_to "Add a review!", new_review_path %></li>
</nav>
<!-- Filters -->
<nav class="filters">
  <%= link_to "All prices", root_path %>
  <!-- Variables are coming from the params defined in the controller -->
  <!-- When we select price, we can then filter price by cuisine type -->
  <%= link_to "£", root_path(price: "£", cuisine: @cuisine, location: @location) %>
  <%= link_to "££", root_path(price: "££", cuisine: @cuisine, location: @location) %>
  <%= link_to "£££", root_path(price: "£££", cuisine: @cuisine, location: @location) %>
</nav>

<!-- Cuisine -->
<nav class="cuisine">
  <!-- When we select cuisine type, we can then filter by price -->
  <%= link_to "Indian", root_path(cuisine: "Indian", price: @price, location: @location) %>
  <%= link_to "Coffee", root_path(cuisine: "Coffee", price: @price, location: @location) %>
  <%= link_to "Pizza", root_path(cuisine: "Pizza", price: @price, location: @location) %>
  <%= link_to "Burger", root_path(cuisine: "Burger", price: @price, location: @location) %>
  <%= link_to "Fish & Chips", root_path(cuisine: "Fish & Chips", price: @price, location: @location) %>
</nav>

<!-- Location -->
<form action="/" class="location">
  <p>Search Location</p>
  <input type="text" name="location" placeholder="e.g. London" value="<%= @location %>">
  <input type="hidden" name="price" value="<%= @price %>">
  <input type="hidden" name="cuisine" value="<%= @cuisine %>">
</form>



<!-- Reviews -->
<% @reviews.each do |review| %>

  <div class="review">
    <div class="restaurant half">
      <h2>Restaurant</h2>
      <p class="large"><%= link_to review.restaurant, review_path(review) %></p>
    </div>
    <div class="cuisine half">
      <h2>Cuisine</h2>
      <p class="large"><%= link_to review.cuisine, review_path(review) %></p>
    </div>
  </div>

<% end %>
