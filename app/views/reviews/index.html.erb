<!-- Add review button -->
<nav class="add-review">
  <li class="diamond-lg center"><%= link_to "Add a review!", new_review_path %></li>
</nav>
<!-- Filters -->
<nav class="filters">
  <%= active_link_to "All prices", root_path, active: { price: nil, cuisine: nil, location: nil} %>
  <!-- Variables are coming from the params defined in the controller -->
  <!-- When we select price, we can then filter price by cuisine type -->
  <%= active_link_to "£", root_path(price: "£", cuisine: @cuisine, location: @location), active: { price: "£" } %>
  <%= active_link_to "££", root_path(price: "££", cuisine: @cuisine, location: @location), active: { price: "££" } %>
  <%= active_link_to "£££", root_path(price: "£££", cuisine: @cuisine, location: @location), active: { price: "£££" } %>
</nav>

<!-- Cuisine -->
<nav class="cuisine">
  <!-- When we select cuisine type, we can then filter by price -->
  <%= active_link_to "Indian", root_path(cuisine: "Indian", price: @price, location: @location), active: { cuisine: "Indian" } %>
  <%= active_link_to "Pizza", root_path(cuisine: "Pizza", price: @price, location: @location), active: { cuisine: "Pizza" } %>
  <%= active_link_to "Burger", root_path(cuisine: "Burger", price: @price, location: @location), active: { cuisine: "Burger" } %>
</nav>

<!-- Location -->
<form action="/" class="location">
  <p>Search Location</p>
  <input type="text" name="location" placeholder="e.g. London" value="<%= @location %>">
  <input type="hidden" name="price" value="<%= @price %>">
  <input type="hidden" name="cuisine" value="<%= @cuisine %>">
</form>

<!-- Reviews -->
<% @reviews.each do |review| %>

  <div class="review">
    <%= link_to review_path(review) do %>

    <div class="restaurant half">
      <h2>Restaurant</h2>
      <p class="large"><%= review.restaurant %></p>
    </div>

    <div class="cuisine half">
      <h2>Cuisine</h2>
      <p class="large"><%= review.cuisine %></p>
    </div>

    <p class="counter"><%= pluralize review.comments.count, "comment" %>
      </p>
  <% end %>
</div>

<% end %>
