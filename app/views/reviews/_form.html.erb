<%= form_for @review do |f| %>

<% if @review.errors.any? %>

  <div class="errors">
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant, placeholder: "Restaurant name", :maxlength => 25 %>
  <%= f.input :address %>
  <%= f.input :body %>
  <%= f.input :cuisine %>
  <%= f.input :price %>
  <%= f.input :score %>
  <%= f.input :ambiance %>
  <%= f.button :submit %>
<% end %>

