<h2>Sign up</h2>

<% if @user.errors.any? %>

  <div class="errors">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<%= simple_form_for @user do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :real_name %>
  <%= f.button :submit, class: "submit-button", value: "Sign-up" %>
<% end %>
