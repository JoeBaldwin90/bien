<h1><%= @content.title %></h1>

<p><%= simple_format @content.body %></p>

<% if @content.image.present? %>
  <div class="main-image"><%= image_tag @content.image.to_s %></div>
<% end %>

<h2>Highly rated reviews</h2>
<%= render partial: "review", collection: @highly_rated_reviews %>

<h2>Featured reviews</h2>
<%= render partial: "review", collection: @featured_reviews %>
